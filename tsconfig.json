{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"],
      "/#/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/**/*.vue",
    "src/**/**/**/*.vue",
    "src/**/**/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/*.d.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}
